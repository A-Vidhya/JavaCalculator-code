package ContestProbes;
import java.util.*;
public class CalculatorOperation 
{
    public static void main(String[] args) 
    {   
    	  Scanner sc=new Scanner(System.in);
    	  int choice,number1,number2,mul=1;
    	  int sum=0,n;
    	  System.out.println("Welcome");
          System.out.println("Available choices");
          System.out.println("1-Perform Addition \n2-Perform Subtraction"
          		+ "\n3-Perform Multiplication\n4-Perform Division\n5-Perform Modulo");    
          System.out.println("Enter your choice");
          choice=sc.nextInt();
          switch(choice) 
          {   
          case 1:
        	  System.out.println("Enter array size");
        	  n=sc.nextInt();
        	  int a[]=new int [n];
        	  System.out.println("Enter array elements");
        		for(int j=0;j<n;j++)
        		  {
        			
        	         a[j]=sc.nextInt();
        			 
        			 sum=sum+a[j];
        	      }
        		
        		System.out.println("sum of numbers"+ sum);
        		break;
	      
	      case 2:
	    	  System.out.println("Enter number1 and number2");
	    	  number1=sc.nextInt();
	    	  number2=sc.nextInt();
	    	  System.out.println("Difference"+( number1-number2));
	    	  break;
	      case 3:
        	  System.out.println("Enter array size");
        	  n=sc.nextInt();
        	   int b[]=new int [n];
        	  System.out.println("Enter array elements");
        		for(int j=0;j<n;j++)
        		  {
        			
        	         b[j]=sc.nextInt();
        			 
        			 mul=mul*b[j];
        	      }
        		System.out.println("Multiplication of numbers"+ mul);
        		break;
	      case 4:
	    	  System.out.println("Enter number1 and number2");
	    	  number1=sc.nextInt();
	    	  number2=sc.nextInt();
	    	  System.out.println("Division"+( number1/number2));
	    	  break;
	      case 5:
	    	  System.out.println("Enter number1 and number2");
	    	  number1=sc.nextInt();
	    	  number2=sc.nextInt();
	    	  System.out.println("Modulo"+( number1/number2));
	    	  break;
	    	  default:
	    	  System.out.println("Enter a valid choice");
	    	
	     
	    	}
	    
    }
     
}
